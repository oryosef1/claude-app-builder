{
  "software_development": {
    "name": "Software Development Project",
    "phases": [
      {
        "phase": "planning",
        "phase_name": "Planning Phase",
        "required_roles": ["Project Manager"],
        "optional_roles": ["Technical Lead"],
        "parallel": false,
        "deliverables": ["project_plan", "requirements", "timeline"],
        "description": "Define project scope, requirements, and timeline"
      },
      {
        "phase": "architecture",
        "phase_name": "Architecture Phase",
        "required_roles": ["Technical Lead"],
        "optional_roles": ["Senior Developer", "Security Engineer"],
        "parallel": false,
        "deliverables": ["technical_architecture", "system_design", "technology_stack"],
        "description": "Design system architecture and technical approach"
      },
      {
        "phase": "test_writing",
        "phase_name": "Test Writing Phase",
        "required_roles": ["QA Engineer", "Test Engineer"],
        "optional_roles": ["Senior Developer"],
        "parallel": true,
        "deliverables": ["unit_tests", "integration_tests", "e2e_tests", "test_documentation"],
        "description": "Write comprehensive tests BEFORE implementation (TDD)",
        "instructions": "Write tests that define the expected behavior. Tests should fail initially since no implementation exists yet. Include unit tests, integration tests, and end-to-end tests."
      },
      {
        "phase": "development",
        "phase_name": "Development Phase",
        "required_roles": ["Senior Developer"],
        "optional_roles": ["Junior Developer"],
        "parallel": true,
        "deliverables": ["source_code", "passing_tests", "documentation"],
        "description": "Implement code to make ALL tests pass",
        "instructions": "Implement the functionality to make all tests pass. DO NOT stop until ALL tests are green. Run tests frequently and fix any failures."
      },
      {
        "phase": "testing",
        "phase_name": "Testing & QA Phase",
        "required_roles": ["QA Engineer"],
        "optional_roles": ["Test Engineer"],
        "parallel": true,
        "deliverables": ["test_results", "bug_reports", "quality_metrics"],
        "description": "Run all tests and perform additional QA",
        "instructions": "Run all test suites, perform manual testing, and verify quality. All tests must pass before proceeding."
      },
      {
        "phase": "deployment",
        "phase_name": "Deployment Phase",
        "required_roles": ["DevOps Engineer"],
        "optional_roles": ["Site Reliability Engineer"],
        "parallel": false,
        "deliverables": ["deployment_plan", "infrastructure", "monitoring"],
        "description": "Deploy to production environment"
      },
      {
        "phase": "quality_review",
        "phase_name": "Quality Review Phase",
        "required_roles": ["QA Director", "Project Manager"],
        "optional_roles": ["Technical Lead"],
        "parallel": false,
        "deliverables": ["quality_assessment", "test_coverage_report", "go_no_go_decision"],
        "description": "Final quality review including test coverage analysis"
      },
      {
        "phase": "documentation",
        "phase_name": "Documentation Phase",
        "required_roles": ["Technical Writer"],
        "optional_roles": [],
        "parallel": true,
        "deliverables": ["user_docs", "api_docs", "test_docs", "maintenance_guide"],
        "description": "Create comprehensive documentation"
      }
    ]
  },
